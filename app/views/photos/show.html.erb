<div id="notice"><%= notice %></div>

<figure>
  <%= image_tag @photo.image.url %>
</figure>

<p>
  <strong><%= @photo.user.email %></strong>
  <%= @photo.description %>
</p>

<%= form_for @photo_like, method: :patch do |f| %>
  <strong><%= @photo.liked_by?(current_user) ? 'Heart' : 'No heart' %></strong>
  <%= f.submit 'Like' %>
<% end %>

<nav>
  <% if @photo.user == current_user %>
    <%= link_to 'Edit', edit_photo_path(@photo) %>
  <% end %>
</nav>
