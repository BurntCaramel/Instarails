<figure class="photo-figure">
  <%= image_tag @photo.image.url %>
</figure>

<div class="photo-actions">
  <%= form_for @photo, url: photo_like_path(@photo), method: :patch do |f| %>
    <%= f.button like_icon(@photo.liked_by?(current_user)), class: 'button button-clear' %>
  <% end %>
  <%= link_to comments_icon, photo_comments_path(@photo) %>
</div>

<div>
  <strong><%= @photo.user.short_name %></strong>
  <%= @photo.description %>
</div>

<%= render 'photo_comments/list', comments: @comments %>
<%#= render 'photo_comments/form', comment: @new_comment %>

<nav>
  <% if @photo.user == current_user %>
    <%= link_to 'Edit', edit_photo_path(@photo) %>
  <% end %>
</nav>
